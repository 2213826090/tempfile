<?xml version="1.0" encoding="iso-8859-1"?>
<TestCase>
    <UseCase>LIVE_CAMERA_READ_EXIF</UseCase>
    <Description>Use Camera to capture an image with basic settings and checks exif data.</Description>
    <b2bIteration>1</b2bIteration>
    <b2bContinuousMode>False</b2bContinuousMode>
    <TcExpectedResult>PASS</TcExpectedResult>
    <Parameters>
         <Parameter>
             <!-- Camera to open, possible values :
                - BACK
                - FRONT
                 -->
             <Name>CAMERA</Name>
             <Value>BACK</Value>
         </Parameter>
         <Parameter>
             <!-- Directory where to save pictures taken-->
             <Name>SAVE_DIRECTORY</Name>
             <Value>sdcard/</Value>
         </Parameter>
         <Parameter>
             <!-- Parameter to check -->
             <Name>EXIF_PARAMETER</Name>
             <Value>ColorSpace</Value>
         </Parameter>
         <Parameter>
            <!-- For some parameters a value can be placed. -->
            <Name>EXIF_VALUE</Name>
            <Value>1</Value>
         </Parameter>
    </Parameters>
</TestCase>