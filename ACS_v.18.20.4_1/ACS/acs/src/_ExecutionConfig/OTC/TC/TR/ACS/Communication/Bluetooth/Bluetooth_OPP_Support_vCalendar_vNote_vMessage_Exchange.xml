<?xml version="1.0" encoding="iso-8859-1"?>
<TestCase version="13.41">
    <UseCase>TEST_STEP_ENGINE</UseCase>
    <Description>DUT serves as server, receives a vcard via OPP and accepts it</Description>
    <b2bIteration>1</b2bIteration>
    <b2bContinuousMode>True</b2bContinuousMode>
    <TcMaxAttempt>1</TcMaxAttempt>
    <TcAcceptanceCriteria>1</TcAcceptanceCriteria>
    <TcExpectedResult>FAIL</TcExpectedResult>
    <Parameters>
        <Parameter>
            <Name>OPP_FILES_TO_TRANSFER</Name>
            <Value>CalendarMeeting.vcs,NoteExample.vnt,ComplexVMessage.vmg</Value>
        </Parameter>
    </Parameters>
    <TestSteps>
        <Include Src="OTC/TC/TR/ACS/Communication/Bluetooth/setup/BT/OTC_Comms_BT_Common.xml" />
        <Setup>
            <!-- AUTOMATION - Set default configuration -->
            <TestStep SetId="BTFullSetupPhones1and2" />
            <TestStep Id="GET_ARTIFACT" EQT="ARTIFACT_MANAGER" ARTIFACT="MISCELLANEOUS/VCS/CalendarMeeting.vcs" ARTIFACT_SOURCE="FROM_BENCH:ARTIFACT_MANAGER:URI" TRANSFER_TIMEOUT="DEFAULT" STORED_FILE_PATH="FILE_PATH_IN_CACHE"/>
            <TestStep Id="INSTALL_FILE" DEVICE="PHONE2" FILE_PATH="FROM_CTX:FILE_PATH_IN_CACHE" TYPE="media" DESTINATION="/sdcard/acs_files/" DESTINATION_STORED_PATH="INSTALLED_FILE_PATH" TIMEOUT="DEFAULT"/>
            <TestStep Id="GET_ARTIFACT" EQT="ARTIFACT_MANAGER" ARTIFACT="MISCELLANEOUS/VNT/NoteExample.vnt" ARTIFACT_SOURCE="FROM_BENCH:ARTIFACT_MANAGER:URI" TRANSFER_TIMEOUT="DEFAULT" STORED_FILE_PATH="FILE_PATH_IN_CACHE"/>
            <TestStep Id="INSTALL_FILE" DEVICE="PHONE2" FILE_PATH="FROM_CTX:FILE_PATH_IN_CACHE" TYPE="media" DESTINATION="/sdcard/acs_files/" DESTINATION_STORED_PATH="INSTALLED_FILE_PATH" TIMEOUT="DEFAULT"/>
            <TestStep Id="GET_ARTIFACT" EQT="ARTIFACT_MANAGER" ARTIFACT="MISCELLANEOUS/VMG/ComplexVMessage.vmg" ARTIFACT_SOURCE="FROM_BENCH:ARTIFACT_MANAGER:URI" TRANSFER_TIMEOUT="DEFAULT" STORED_FILE_PATH="FILE_PATH_IN_CACHE"/>
            <TestStep Id="INSTALL_FILE" DEVICE="PHONE2" FILE_PATH="FROM_CTX:FILE_PATH_IN_CACHE" TYPE="media" DESTINATION="/sdcard/acs_files/" DESTINATION_STORED_PATH="INSTALLED_FILE_PATH" TIMEOUT="DEFAULT"/>
            <!-- SPEC - Step 2 : Configure and send the file with OPP -->
            <Fork Id="TimeoutToNever">
                <TestStep SetId="BTOppSetup" DEVICE="PHONE1" />
                <TestStep SetId="BTOppSetup" DEVICE="PHONE2" />
            </Fork>
            <TestStep Id="BT_OPP_SEND" DEVICE="PHONE2" BDADDR="FROM_CTX:BT_MAC_ADDRESS_PHONE1" FILES="FROM_TC:OPP_FILES_TO_TRANSFER" SAVE_INFO_AS="OppSend" />
        </Setup>
        <RunTest>
            <TestStep Id="BT_OPP_CHECK_STATUS" DEVICE="PHONE2" FILES="FROM_TC:OPP_FILES_TO_TRANSFER" EXPECTED_STATE="waiting_accept" TIMEOUT="5"/>
            <TestStep Id="BT_OPP_CHECK" DEVICE="PHONE1" BDADDR="FROM_CTX:BT_MAC_ADDRESS_PHONE2" FILES="FROM_TC:OPP_FILES_TO_TRANSFER" EXPECTED_FILES_SIZE="FROM_CTX:OppSend:FileSize" EXPECTED_STATE="any_cancelled" SAVE_INFO_AS="OppCheck" TIMEOUT="0" THROUGHPUT_MARGIN="0" />
            <TestStep Id="COMPARE" FIRST="FROM_CTX:OppSend:FileChecksum" SECOND="FROM_CTX:OppCheck:FileChecksum" OPERATOR="EQUAL" PASS_IF="true" />
        </RunTest>
        <TearDown>
            <TestStep Id="BT_OPP_CLEANUP" DEVICE="PHONE1" REMOVE_FILES="true" FILES="FROM_TC:OPP_FILES_TO_TRANSFER" />
            <Fork Id="ForkTeardown">
                <TestStep SetId="BTCommonTeardown" DEVICE="PHONE1" />
                <TestStep SetId="BTCommonTeardown" DEVICE="PHONE2" />
            </Fork>
        </TearDown>
    </TestSteps>
</TestCase>