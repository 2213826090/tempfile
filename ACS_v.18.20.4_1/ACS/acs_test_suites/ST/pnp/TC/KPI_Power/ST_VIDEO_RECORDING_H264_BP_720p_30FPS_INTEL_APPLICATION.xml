<?xml version="1.0" encoding="iso-8859-1"?>
<TestCase>
    <UseCase>TEST_STEP_ENGINE</UseCase>
    <Description>Power consumption measurement (in mA) during user mode image capture</Description>
    <b2bIteration>1</b2bIteration>
    <b2bContinuousMode>True</b2bContinuousMode>
    <SavePatRawData>True</SavePatRawData>
    <PowerCalculation>False</PowerCalculation>
    <TcExpectedResult>PASS</TcExpectedResult>
    <TcMaxAttempt>1</TcMaxAttempt>
    <TcAcceptanceCriteria>1</TcAcceptanceCriteria>
    <Parameters>
        <Parameter>
            <Name>SAVE_POWER_DATA</Name>
            <Value>True</Value>
        </Parameter>
        <Parameter>
            <Name>VIDEO_PREFIX</Name>
            <Value>VIDEO/1080p</Value>
        </Parameter>
        <Parameter>
            <Name>TEST_DURATION</Name>
            <Value>180</Value>
        </Parameter>
        <Parameter>
            <!-- Path to video file to play on host side -->
            <Name>VIDEO_PAYLOAD</Name>
            <Value>video_playback_h264_1080p_30fps</Value>
        </Parameter>
        <Parameter>
            <Name>VIDEO_PATH</Name>
            <Value>/sdcard/DCIM/Camera/</Value>
        </Parameter>
        <Parameter>
            <Name>CAMERA_CONFIG_FILE</Name>
            <Value>video_record_720_config_file</Value>
        </Parameter>
        <Parameter>
            <!-- Sleep time before 1st iteration, or all for b2bContinuousMode = False -->
            <Name>SETTLE_TIME</Name>
            <Value>0</Value>
        </Parameter>
        <Parameter>
            <Name>SLEEP_DURATION</Name>
            <Value>120</Value>
        </Parameter>
        <Parameter>
             <Name>SYSDEBUG_MODULES</Name>
             <Value>
                Residency: s3,s0i3,s0i1,lpmp3;
                WakeLocks;
                ModemPanic;
                CrashInfo;
                Thermals;
                Dstates;
            </Value>
        </Parameter>
        <Parameter>
            <Name>TEST_STEP_ENGINE_ENTRY</Name>
            <Value>ST/pnp/UC/VideoRecordingIntel.xml</Value>
        </Parameter>
    </Parameters>
</TestCase>
