<?xml version="1.0" encoding="iso-8859-1"?>
<TestCase>
    <UseCase>LIVE_CAMERA_PICTURE_DETAILS</UseCase>
    <Description>Check picture details after updating camera parameters</Description>
    <b2bIteration>1</b2bIteration>
    <b2bContinuousMode>False</b2bContinuousMode>
    <TcExpectedResult>PASS</TcExpectedResult>
    <Parameters>
         <Parameter>
             <!-- Camera to open, possible values :
                - BACK
                - FRONT
                 -->
             <Name>CAMERA</Name>
             <Description>FRONT</Description>
         </Parameter>
         <Parameter>
             <!-- Picture Size :
                - QVGA
                - VGA
                - 1MP
                - 1.3MP
                - 3MP
                - 5MP
                - 8MP
                 -->
             <Name>PICTURE_SIZE</Name>
             <Description>Picture size</Description>
         </Parameter>
         <Parameter>
              <!-- Flash mode to set, possible values :
                - auto
                - off
                - on
                - torch
                - red-eye
                 -->
             <Name>FLASH_MODE</Name>
             <Description>Flash mode to set</Description>
         </Parameter>
         <Parameter>
              <!-- White balance mode to set, possible values :
                - auto
                - cloudy-daylight
                - daylight
                - incandescent
                - fluorescent
                - shade
                - twilight
                - warm-fluorescent
                 -->
             <Name>WHITE_BALANCE</Name>
             <Description>White balance to set</Description>
         </Parameter>
         <Parameter>
             <!-- Directory where to save pictures taken  -->
             <Name>SAVE_DIRECTORY</Name>
             <Description>Directory where to save pictures taken</Description>
         </Parameter>
    </Parameters>
</TestCase>
