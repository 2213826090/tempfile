<?xml version="1.0" encoding="iso-8859-1"?>
<TestCase>
   <UseCase>LIVE_CAMERA_TAKE_PICTURE_WHILE_VIDEO_RECORD</UseCase>
   <Description>Use Camera to capture image while video recording</Description>
   <b2bIteration>1</b2bIteration>
   <b2bContinuousMode>True</b2bContinuousMode>
   <TcMaxAttempt>1</TcMaxAttempt>
   <TcAcceptanceCriteria>1</TcAcceptanceCriteria>
   <Parameters>
       <Parameter>
           <!-- Camera to open, possible values :
            - BACK
            - FRONT
            -->
           <Name>CAMERA</Name>
            <Value>BACK</Value>
       </Parameter>
       <Parameter>
            <!-- Duration of the video to record in ms -->
            <Name>RECORD_DURATION</Name>
            <Value>10000</Value>
       </Parameter>
       <Parameter>
           <!-- Directory where to save picture taken and video recorded, should be an existing directory-->
           <Name>SAVE_DIRECTORY</Name>
           <Value>sdcard/</Value>
       </Parameter>
   </Parameters>
</TestCase>
