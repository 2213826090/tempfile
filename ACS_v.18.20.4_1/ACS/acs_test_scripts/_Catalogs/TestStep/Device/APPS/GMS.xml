<?xml version="1.0" encoding="iso-8859-1"?>
<TestSteps xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../acs/src/_Catalogs/TestStep/teststep.xsd">
    <TestStep Id="SET_ALARM_CLOCK" Domain="APPS" SubDomain="GMS" Feature="ALARMCLOCK" Status="DONE">
            <ClassName>acs_test_scripts.TestStep.Device.Apps.Core.Clock.SetAlarmClock.SetAlarmClock</ClassName>
            <Description>
                        This teststep sets an alarm clock using an android intent. It is mandatory to specify the
                device and the alarm_message and the time given by the pair alarm_hour and alarm_minutes.
            </Description>
            <Environment name="ANY"/>
            <Parameters>
                <Parameter name="DEVICE" type="STRING" isOptional="false">
                    <Description>Device name on which the action will be executed</Description>
                    <PossibleValues/>
                    <DefaultValue>PHONE1</DefaultValue>
                </Parameter>
                <Parameter name="ALARM_MESSAGE" type="STRING" isOptional="false">
                    <Description>The message that the alarm will prompt.</Description>
                    <PossibleValues></PossibleValues>
                    <DefaultValue>ALARM</DefaultValue>
                </Parameter>
                <Parameter name="ALARM_HOUR_FROM_NOW" type="STRING" isOptional="false">
                    <Description>In how many hours from now should the alarm ring.</Description>
                    <PossibleValues></PossibleValues>
                    <DefaultValue>0</DefaultValue>
                </Parameter>
                <Parameter name="ALARM_MINUTES_FROM_NOW" type="STRING" isOptional="false">
                    <Description>In how many minutes from now should the alarm ring.</Description>
                    <PossibleValues></PossibleValues>
                    <DefaultValue>5</DefaultValue>
                </Parameter>
                <Parameter name="SAVE_HOUR" type="STRING" isOptional="false">
                    <Description>Save hours parameter into context</Description>
                    <PossibleValues></PossibleValues>
                    <DefaultValue></DefaultValue>
                </Parameter>
				<Parameter name="SAVE_MINUTES" type="STRING" isOptional="false">
                    <Description>Save minutes parameter into context</Description>
                    <PossibleValues></PossibleValues>
                    <DefaultValue></DefaultValue>
                </Parameter>
            </Parameters>
    </TestStep>
</TestSteps>
